<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.jimdo.graylog"
      android:versionCode="2"
      android:versionName="0.2">

    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity
            android:name=".view.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.DashboardActivity"
            android:label="Graylog : Dashboard"
            android:configChanges="keyboardHidden|orientation">
        </activity>
        <activity
            android:name=".view.MessagesActivity"
            android:label="Graylog : Messages"
            android:configChanges="keyboardHidden|orientation">
        </activity>
        <activity
            android:name=".view.CategoriesActivity"
            android:label="Graylog : Categories">
        </activity>
        <activity
            android:name=".view.AboutActivity"
            android:label="Graylog : About"
            android:theme="@android:style/Theme.Dialog">
        </activity>
        <activity
            android:name=".view.SettingsActivity"
            android:label="Graylog : Settings">
        </activity>
        <activity
            android:name=".view.FilterActivity"
            android:label="Graylog : Filter"
            android:theme="@android:style/Theme.Translucent">
        </activity>
    </application>
    
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-sdk android:minSdkVersion="4" />
</manifest> 